source "https://rubygems.org"

# Use github-pages gem which includes Jekyll and other GitHub Pages dependencies
gem "github-pages", group: :jekyll_plugins

# Theme
gem "minima", "~> 2.5"

# Plugins (avoiding duplicates)
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
end

# Performance boost for M1 Mac
gem "webrick"
